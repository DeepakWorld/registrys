{
  "version": 2,
  "builds": [
    {
      "src": "cp/**/*.php",
      "use": "vercel-php@0.7.0"
    },
    {
      "src": "cp/assets/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/cp/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/cp/$1"
    }
  ]
}